doctype html
html(lang="id" class="scroll-smooth")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title || "KitaNime"
    
    link(rel="icon" href="/images/favicon.ico")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet")
    
    script(src="https://cdn.tailwindcss.com/3.4.17")
    script(src="https://unpkg.com/lucide@latest")
    script.
      lucide.createIcons();
    script.
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              'yt-red': '#FF0000',
              'yt-white': '#FFFFFF',
              'yt-black': '#0F0F0F',
              'yt-light-text': '#030303',
              'yt-dark-text': '#F1F1F1',
              'yt-light-gray-1': '#F9F9F9',
              'yt-light-gray-2': '#E5E5E5',
              'yt-dark-gray-1': '#272727',
              'yt-dark-gray-2': '#3F3F3F',
              primary: { 500: '#FF0000', 600: '#E60000', 700: '#CC0000' }
            },
            fontFamily: {
              'sans': ['Roboto', 'system-ui', 'sans-serif']
            }
          }
        }
      }
      
  body(class="bg-yt-light-gray-1 dark:bg-yt-black")
    block content

    script.
      // Manually handle dark mode for this layout
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
