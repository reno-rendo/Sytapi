extends auth-layout

block content
  div(class="flex flex-col md:flex-row w-full min-h-screen bg-yt-white dark:bg-yt-black")
    // Left Column: Image
    div(class="hidden md:flex md:w-2/3 bg-cover bg-center" style="background-image: url('/images/poster.png');")
    
    // Right Column: Form
    div(class="w-full md:w-1/3 flex flex-col items-center justify-center p-8")
      div(class="w-full max-w-sm space-y-6")
        h1(class="text-3xl font-bold text-center text-yt-light-text dark:text-yt-dark-text") Login
        
        if error
          div(class="p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert")
            span(class="font-medium")= error
            
        if message
          div(class="p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert")
            span(class="font-medium")= message

        form(action="/auth/login" method="POST" class="space-y-6")
          div
            label(for="identifier" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white") Username atau Email
            input(type="text" name="identifier" id="identifier" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-yt-red focus:border-yt-red block w-full p-2.5 dark:bg-yt-dark-gray-2 dark:border-yt-dark-gray-2 dark:placeholder-gray-400 dark:text-white" placeholder="username atau email" required)
          
          div
            label(for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white") Password
            input(type="password" name="password" id="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-yt-red focus:border-yt-red block w-full p-2.5 dark:bg-yt-dark-gray-2 dark:border-yt-dark-gray-2 dark:placeholder-gray-400 dark:text-white" required)
          
          button(type="submit" class="w-full text-white bg-yt-red hover:bg-opacity-90 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center") Login
          
          p(class="text-sm font-light text-gray-500 dark:text-gray-400 text-center")
            | Belum punya akun? 
            a(href="/auth/register" class="font-medium text-yt-red hover:underline") Buat akun

